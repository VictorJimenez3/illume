{
    "name": "illume", 
    "description": "illume", 
    "version": "1.0",
    "manifest_version": 3, 
    "background": {
        "service_worker": "scripts/background.js"
    },
    
    "permissions": ["storage", "activeTab", "contextMenus"],
    
    "action": {
        "default_popup": "templates/popup.html"
    }, 
    
    "content_scripts": [
        {
            "matches": ["https://*.google.com/*"],
            "js": ["scripts/content.js"]
        }
    ]
}