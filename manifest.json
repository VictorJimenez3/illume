{
    "name": "illume", 
    "description": "illume", 
    "version": "1.0",
    "manifest_version": 3, 
    "background": {
        "service_worker": "scripts/background.js"
    },
    "permissions": 
    ["storage", 
    "activeTab",
    "sidePanel",
    "contextMenus"],
    "action": {
        "default_popup": "templates/popup.html"
    }, 
    "side_panel": {
    "default_path": "templates/sidepanel.html"
    },
    "content_scripts": [
        {
            "matches": ["https://*.google.com/*"],
            "js": ["scripts/content.js"]
        }
    ]
}