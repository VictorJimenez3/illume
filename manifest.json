{
    "name": "illume", 
    "description": "illume", 
    "version": "1.0",
    "manifest_version": 3, 
    
    "background": {
        "service_worker": "scripts/background.js"
    },
    
    "permissions": ["storage", "activeTab", "contextMenus", "scripting"],
    
    "action": {
        "default_popup": "templates/popup.html"
    }, 
    
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["scripts/content.js"],
            "run_at": "document_end"
        }
    ],

    "host_permissions": [
        "<all_urls>"
    ],

    "externally_connectable": {
        "matches": ["https://*.example.com/*"]
    }
}